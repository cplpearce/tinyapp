<header>
  <% if (!username) username = "Anonymous" %>
  <nav class="navbar navbar-expand-md navbar-dark bg-info">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (username === "Anonymous") { %>
      <form class="form-inline" method="POST" action="/login" >
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">Not Logged In!</span>
          </div>
          <input class="input-group form-control" name="username" type="login" placeholder="">
          <div class="input-group-append">
            <button class="input-group btn btn-warning" type="submit">Login</button>
          </div>
        </div>
      </form>
    <% } else { %>
      <form class="form-inline" method="POST" action="/logout" >
        <div class="input-group">
          <span class=" p-2">Logged in as: <%= username %></span>
        </div>
        <button class="input-group btn btn-warning" type="submit">Log Off</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>